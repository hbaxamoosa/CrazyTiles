<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/gameFragment2x2_destination">

    <fragment
        android:id="@+id/gameFragment2x2_destination"
        android:name="com.boxofm.crazytiles.game.GameFragment2x2"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game_2x2">
        <action
            android:id="@+id/action_gameFragment2x2_to_scoreFragment"
            app:destination="@id/score_destination"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/score_destination"
        android:name="com.boxofm.crazytiles.score.ScoreFragment"
        android:label="score_fragment"
        tools:layout="@layout/score_fragment">
        <action
            android:id="@+id/action_scoreFragment_to_gameFragment"
            app:destination="@+id/gameFragment2x2_destination"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
        <argument
            android:name="score"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment3x3_destination"
        android:name="com.boxofm.crazytiles.game.GameFragment3x3"
        android:label="GameFragment3x3"
        tools:layout="@layout/fragment_game_3x3">
        <action
            android:id="@+id/action_gameFragment3x3_to_scoreFragment"
            app:destination="@id/score_destination" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment4x4_destination"
        android:name="com.boxofm.crazytiles.game.GameFragment4x4"
        android:label="GameFragment4x4"
        tools:layout="@layout/fragment_game_4x4">
        <action
            android:id="@+id/action_gameFragment4x4_to_scoreFragment"
            app:destination="@id/score_destination" />
    </fragment>

    <activity
        android:id="@+id/infoActivity"
        android:name="com.boxofm.crazytiles.info.InfoActivity"
        android:label="InfoActivity"
        tools:layout="@layout/activity_info" />
    <activity
        android:id="@+id/settingsActivity"
        android:name="com.boxofm.crazytiles.ui.SettingsActivity"
        android:label="SettingsActivity"
        tools:layout="@layout/activity_settings" />
</navigation>